<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@drawable/backimg2"
    tools:context=".OptionActivity">

    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/logo1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp"/>

    <TextView
        android:id="@+id/txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wlcome to Your Store"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/imgLogo"
        />

    <Button
        android:id="@+id/btnLogin1st"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnRegister1st"
        android:layout_marginBottom="11dp"
        android:textColor="@color/black"
        android:textAllCaps="false"
        android:text="Register"
        android:background="@drawable/button_shape" />

    <Button
        android:id="@+id/btnRegister1st"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:textColor="@color/black"
        android:text="Continue Without Login"
        android:textAllCaps="false"
        android:background="@drawable/newbtn" />

</RelativeLayout>